<Window x:Class="CardCreater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardCreater"
        mc:Ignorable="d"
        Title="MainWindow" Height="513.585" Width="945.742">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380*"/>
            <ColumnDefinition Width="547*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image" Grid.Column="1"/>
        <ScrollViewer x:Name="scrollViewer" HorizontalAlignment="Left" Margin="0,52,0,0" Width="385">
            <StackPanel x:Name="stack" HorizontalAlignment="Left"/>
        </ScrollViewer>
        <Button x:Name="addElementButtom" Content="+" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top" Width="45" Height="32" FontSize="14" Click="button_Click"/>
        <Button x:Name="removeElementButtom" Content="-" HorizontalAlignment="Left" Margin="330,10,0,0" VerticalAlignment="Top" Width="45" Height="32" FontSize="14" Click="button_Click"/>
    </Grid>
</Window>
